<div class='well'>

<!-- form_for方法用於產生一個form表單 -->
<%= form_for(@post) do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">

      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <!-- 丟參數概念定義class -->
    <%= f.text_field :title %>
  </div>
  <br>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
  <br>

<% end %>

</div>