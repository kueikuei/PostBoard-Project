<div class="well">

  <%#= form_tag '/Admins_login' do %>
  <%= form_tag(login_users_path) do %>
    <div class="form-group">
      <%= label_tag :name %>
      <br>
      <%= text_field_tag :name, params[:name] %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <br>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <br>
    <%= submit_tag "登入", class: "btn btn-success" %>
  <% end %>
</div>